<!--pages/index/index.wxml-->
<button open-type="getUserInfo" bindgetuserinfo="getUserInfo">获取授权</button>
<view>hello {{name}}</view>
<view>我的年龄:{{age}}</view>
<view wx:for="{{res}}" wx:if="{{isFalse}}" wx:key="item">{{item}}</view>

<!-- 事件监听 -->
<view>counter:{{counter}}</view>
<button size='mini' bindtap='addCounter'>+</button>
<button size='mini' bindtap='reCounter'>-</button>
<view wx:for="{{list}}" wx:key="item">{{item.title}}</view>

<button size="mini" bind:tap="handleShow">显示</button>
